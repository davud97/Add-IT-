<style>
  body {
    background-image: url("/background/1.jpg");
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    min-height: 100vh;
    margin: 0;
    color: black;
    position: relative;
    font-family: Arial, sans-serif;
  }

  .top-right-logo {
    position: absolute;
    top: 20px;
    right: 20px;
    width: 80px;
    height: auto;
    z-index: 999;
  }

  .welcome-message {
    position: absolute;
    top: 20px;
    left: 20px;
    color: black;
    font-size: 18px;
    z-index: 999;
  }

  h1 {
    text-align: center;
    color: black;
    margin-top: 80px;
  }

  .bid-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
    padding: 20px;
    margin-top: 20px;
  }

  .bid-card {
    border: 2px solid white;
    padding: 15px;
    border-radius: 10px;
    background: rgba(0, 0, 0, 0.5);
    color: white;
    text-decoration: none;
    transition: 0.3s;
    cursor: pointer;
  }

  .bid-card:hover {
    transform: scale(1.03);
    border-color: black;
  }

  .bid-card h4,
  .bid-card p {
    margin: 5px 0;
  }

  .bid-card a {
    display: block;
    text-decoration: none;
    color: inherit;
    font-weight: bold;
  }
</style>

<body>
  <%- include('../partials/_navbar.ejs') %>
  <img src="/logo/logo.png" class="top-right-logo" />

  <h1>My Bids</h1>

  <% if (bids.length === 0) { %>
  <p>You havenâ€™t placed any bids yet.</p>
  <% } else { %>
  <div class="bid-container">
    <% bids.forEach(bid => { %>
    <div
      class="bid-card"
      onclick="window.location.href='/bids/<%= bid.advertisement._id %>'"
    >
      <h4><%= bid.advertisement.brand %></h4>
      <p><%= bid.currentBid %> BHD</p>
    </div>
    <% }) %>
  </div>
  <% } %>
</body>

<style>
  body {
    background-image: url("/background/1.jpg");
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    min-height: 100vh;
    margin: 0;
    font-family: Arial, sans-serif;
    position: relative;
  }

  .top-right-logo {
    position: absolute;
    top: 1px;
    right: 20px;
    width: 80px;
    height: auto;
    z-index: 999;
  }

  .ad-container {
    max-width: 600px;
    margin: 100px auto 50px auto;
    background: rgba(0, 0, 0, 0.5);
    padding: 30px;
    border-radius: 15px;
    color: white;
  }

  h1 {
    color: black;
    text-align: center;
    margin-bottom: 20px;
  }

  h2 {
    color: #00ce11;
    margin-top: 20px;
  }

  p {
    margin: 8px 0;
    font-size: 18px;
  }

  form input[type="number"] {
    width: 100%;
    padding: 10px;
    margin-top: 5px;
    border-radius: 8px;
    border: 1px solid #ccc;
    font-size: 16px;
  }

  button {
    margin-top: 15px;
    padding: 10px 15px;
    border-radius: 8px;
    border: none;
    background-color: #00ce11;
    color: white;
    font-weight: bold;
    cursor: pointer;
    transition: 0.2s;
  }

  button:hover {
    background-color: #00a80d;
  }
</style>

<body>
  <%- include('../partials/_navbar.ejs') %>

  <div class="ad-container">
    <h1><%= ad.brand %> - <%= ad.model %></h1>
    <p>Starting Bid: <%= ad.price %> BHD</p>
    <p>Sale Mode: <%= ad.saleMode %></p>
    <p>Owner's Contact Number: <%= ad.contactNumber %></p>

    <h2>Bidding</h2>

    <% if (user._id !== ad.owner._id && (!bid || bid.bidStatus)) { %> <% if
    (bid) { %>
    <p>Current Highest Bid: <%= bid.currentBid %> BHD</p>
    <% } %>
    <form method="POST" action="/bids/<%= ad._id %>">
      <label>Your Bid:</label>
      <input
        type="number"
        name="currentBid"
        min="<%= bid ? bid.currentBid + 1 : ad.price %>"
        required
      />
      <button type="submit">Place Bid</button>
    </form>
    <% } else if (bid && !bid.bidStatus) { %>
    <p>Bidding closed.</p>
    <p>Winner: <%= bid.lastBidder.username %></p>
    <% if (ad.owner._id.equals(user._id)) { %>
    <p>Winner's Phone Number: <%= bid.lastBidder.phone %></p>
    <% } %>
    <p>Winning Bid: <%= bid.currentBid %> BHD</p>
    <% } %> <% if (ad.owner._id.equals(user._id) && bid && bid.bidStatus) { %>
    <form method="POST" action="/bids/<%= ad._id %>/finalize">
      <button type="submit">End Auction</button>
    </form>
    <% } %>
  </div>
</body>

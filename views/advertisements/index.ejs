<style>
  body {
    background-image: url("/background/1.jpg");
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    min-height: 100vh;
  }
  .card-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
    padding: 20px;
  }

  .ad-card {
    border: 2px solid white;
    padding: 15px;
    border-radius: 10px;
    background: rgba(0, 0, 0, 0.5);
    color: white;
    text-decoration: none;
    transition: 0.3s;
  }

  .ad-card:hover {
    transform: scale(1.03);
    border-color: black;
  }

  .ad-card a {
    text-decoration: none;
    color: inherit;
  }
  .top-right-logo {
    position: absolute;
    top: 20px;
    right: 20px;
    width: 80px;
    height: auto;
    z-index: 999;
  }
</style>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <img src="/logo/logo.png" class="top-right-logo" />
  <div class="index-header">
    <h1>All Advertisements</h1>
    <a href="/advertisements/new">Add Advertisement</a>
  </div>
  <div class="card-container">
    <% advertisements.forEach((advertisement) => { %>
    <div class="ad-card">
      <a href="/advertisements/<%= advertisement._id %>">
        <h4><%= advertisement.brand %></h4>
        <h4><%= advertisement.model %></h4>
        <h4><%= advertisement.price %></h4>
        <p>Owned by <%= advertisement.owner.username %></p>
      </a>
    </div>
    <% }) %>
  </div>
</body>

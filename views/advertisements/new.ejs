<style>
  body {
    background-image: url("/background/1.jpg");
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    min-height: 100vh;
    margin: 0;
    font-family: Arial, sans-serif;

    position: relative;
  }

  .ad {
    color: white;
  }

  .top-right-logo {
    position: absolute;
    top: 0px;
    right: 20px;
    width: 80px;
    height: auto;
    z-index: 999;
  }

  h1 {
    text-align: center;
    margin-top: 80px;
    color: black;
  }

  form {
    background: rgba(0, 0, 0, 0.6);
    max-width: 600px;
    margin: 40px auto;
    padding: 30px;
    border-radius: 15px;
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  label {
    font-size: 18px;
    margin-bottom: 5px;
  }

  input,
  select {
    padding: 10px;
    font-size: 16px;
    border-radius: 8px;
    border: 1px solid #ccc;
    width: 100%;
    box-sizing: border-box;
  }

  button {
    background-color: #00ce11;
    color: white;
    padding: 12px;
    border: none;
    border-radius: 10px;
    font-size: 18px;
    cursor: pointer;
    transition: 0.3s;
  }

  button:hover {
    background-color: #00a80d;
    transform: scale(1.05);
  }

  @media (max-width: 700px) {
    form {
      margin: 20px;
      padding: 20px;
    }
    h1 {
      font-size: 24px;
      margin-top: 60px;
    }
  }
</style>

<body>
  <%-include('../partials/_navbar.ejs')%>
  <h1>Add a new Advertisement</h1>
  <div class="ad">
    <form method="POST" action="/advertisements">
      <label for="brand">Brand:</label>
      <input type="text" name="brand" id="brand" />
      <br />
      <label for="model">Model:</label>
      <input type="text" name="model" id="model" />
      <br />
      <label for="price">Price:</label>
      <input type="number" name="price" id="price" min="0" />
      <br />
      <label for="mileage">Mileage:</label>
      <input type="number" name="mileage" id="mileage" min="0" />
      <br />
      <label for="location">Location:</label>
      <input type="text" name="location" id="location" />
      <br />
      <label for="contactNumber">ContactNumber:</label>
      <input type="number" name="contactNumber" id="contactNumber" />
      <br />
      <label for="category">Category</label>
      <select name="category" id="category">
        <% categories.forEach((category)=>{%>
        <option value="<%= category._id  %>"><%= category.type %></option>
        <% }) %>
      </select>
      <br />
      <label for="saleMode">saleMode</label>
      <select name="saleMode" id="saleMode">
        <option value="fixed">Fixed</option>
        <option value="bid">Bid</option>
      </select>
      <br />
      <button type="submit">Add Advertisement</button>
    </form>
  </div>
</body>
